{
    "manifest_version": 3,
    "name": "INTELLITHING - Find & Replace",
    "version": "1.0",
    "description": "Prompt to replace with result on the webpage!",
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
